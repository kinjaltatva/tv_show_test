<% if notice.present? %>
  <p class="notice alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class="alert alert-danger alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= alert %></p>
<% end %>